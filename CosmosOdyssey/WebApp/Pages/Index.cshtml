@page
@model IndexModel

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<form method="post">
    <div class="form-group mb-3">
        <label for="from">Departure Planet</label>
        <select id="from" name="From" class="form-select w-auto">
            @foreach (var location in Model.Locations)
            {
                <option value="@location">@location</option>
            }
        </select>
    </div>
    <div class="form-group mb-3">
        <label for="to">Destination Planet</label>
        <select id="to" name="To" class="form-select w-auto">
            @foreach (var location in Model.Locations)
            {
                <option value="@location">@location</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Search Routes</button>
</form>
