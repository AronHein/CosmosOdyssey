@page
@model WebApp.Pages.AllReservationsModel

<head>
    <title>All Reservations</title>
</head>
<body>
<div class="container mt-5">
    <h1>All Reservations</h1>

    @if (Model.Reservations.Count > 0)
    {
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Reservation ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Route</th>
                <th>Total Quoted Price</th>
                <th>Total Quoted Travel Time</th>
                <th>Companies</th>
            </tr>
            </thead>
            <tbody>

            @foreach (var reservation in Model.Reservations)
            {
                var routes = reservation.Routes;
                var fullRoute = routes.First().From.Name;
                foreach (var routeInfo in routes)
                {
                    fullRoute += " -> " + routeInfo.To.Name;
                }
                <tr>
                    <td>@reservation.Id</td>
                    <td>@reservation.FirstName</td>
                    <td>@reservation.LastName</td>
                    <td>@fullRoute</td>
                    <td>@reservation.TotalQuotedPrice</td>
                    <td>@reservation.TotalQuotedTravelTime</td>
                    <td>@string.Join(", ", reservation.Companies)</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No reservations found.</p>
    }
</div>
</body>